{
  "name": "resa",
  "version": "3.0.0-rc.9",
  "description": "A simple framework based on redux, redux-saga, redux-action which can reduce the amount of code by almost 50%.",
  "main": "lib/index.js",
  "scripts": {
    "build": "babel src -d lib --ignore test",
    "buildlib": "cross-env NODE_ENV=production babel src -d lib --ignore src/test",
    "lint": "eslint src/*.js src/test/*.js",
    "test": "jest",
    "coverage": "jest --coverage",
    "report": "nyc report --temp-directory=coverage --reporter=text-lcov | coveralls",
    "coveralls": "npm run coverage && npm run report",
    "prepublish": "npm run lint && npm run test && npm run buildlib",
    "docs": "cd docs && gitbook install && gitbook serve",
    "deploy": "cd docs && gitbook install && gh-pages -d _book"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wangtao0101/resa.git"
  },
  "keywords": [
    "redux-saga",
    "redux"
  ],
  "author": "wangtao0101",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wangtao0101/resa/issues"
  },
  "homepage": "https://github.com/wangtao0101/resa#readme",
  "peerDependencies": {
    "react": "^0.14.0 || ^15.0.0-0 || ^16.0.0-0"
  },
  "dependencies": {
    "clone": "^2.1.1",
    "invariant": "^2.2.2",
    "react-redux": "^5.0.0",
    "redux": "^2.0.0 || ^3.0.0",
    "redux-actions": "^2.0.0",
    "redux-immutable": "^4.0.0",
    "redux-saga": ">0.15.0",
    "redux-saga-middleware": "^1.0.3",
    "warning": "^3.0.0"
  },
  "devDependencies": {
    "@types/jest": "^20.0.2",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.2.1",
    "babel-jest": "^19.0.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.22.0",
    "babel-runtime": "^6.23.0",
    "coveralls": "^2.13.1",
    "cross-env": "^4.0.0",
    "enzyme": "^2.9.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-plugin-import": "^2.6.1",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.1.0",
    "gh-pages": "^1.1.0",
    "immutable": "^3.8.1",
    "jest": "^20.0.0",
    "nyc": "^11.0.3",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-test-renderer": "^15.6.1"
  }
}
